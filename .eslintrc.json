{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "plugin:react-native/all"
  ],
  "plugins": [
    "react-native",
    "jsx-a11y",
    "import"
  ],
  "env": {
    "jest": true
  },
  "rules": {
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [
          ".jsx",
          ".js"
        ]
      }
    ],
    "import/prefer-default-export": "off",
    "react-native/sort-styles": 0
  },
  "globals": {
    "__DEV__": true
  },
  "settings": {
    "import/resolver": {
      "babel-plugin-root-import": {}
    }
  }
}
